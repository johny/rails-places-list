= form_for [:admin, @city] do |f|
  - if @city.errors.any?
    #error_explanation
      %h2= "#{pluralize(@city.errors.count, "error")} prohibited this city from being saved:"
      %ul
        - @city.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, "Nazwa:"
    = f.text_field :name, class: 'form-control'
  -#.form-group
    = f.label :slug, "Slug"
    = f.text_field :slug, class: 'form-control'
  .form-group
    = f.label :workflow_state, "Status:"
    = f.text_field :workflow_state, class: 'form-control'
  .actions
    = f.submit 'Save'
