= form_for [:admin, @place] do |f|
  - if @place.errors.any?
    #error_explanation
      %h2= "#{pluralize(@place.errors.count, "error")} prohibited this place from being saved:"
      %ul
        - @place.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control', rows: 10
  .form-group
    = f.label :street_address
    = f.text_field :street_address, class: 'form-control'
  .form-group
    = f.label :zipcode
    = f.text_field :zipcode, class: 'form-control'
  .form-group
    = f.label :city_id
    = f.collection_select :city_id, City.all, :id, :name, {}, class: 'form-control'
  .form-group
    = f.label :phone
    = f.text_field :phone, class: 'form-control'
  .form-group
    = f.label :website
    = f.text_field :website, class: 'form-control'
  .form-group
    = f.label :email
    = f.text_field :email, class: 'form-control'

  .actions
    = f.submit 'Save place', class: 'btn btn-primary'
    = f.submit 'Save & next', class: 'btn btn-primary'
